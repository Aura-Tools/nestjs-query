{
    "extends": "./tsconfig.build.json",
    "compilerOptions": {
        "composite": true,
        "baseUrl": "./packages",
        "paths": {
            "@nestjs-query/core": ["core/src"],
            "@nestjs-query/query-graphql": ["query-graphql/src"],
            "@nestjs-query/query-typeorm": ["query-typeorm/src"],
            "@nestjs-query/core/*": ["core/src/*"],
            "@nestjs-query/query-graphql/*": ["query-graphql/src/*"],
            "@nestjs-query/query-typeorm/*": ["query-typeorm/src/*"]
        }
    }
}
