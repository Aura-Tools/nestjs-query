{
    "extends": "./tsconfig.build.json",
    "compilerOptions": {
        "baseUrl": "./packages",
        "paths": {
            "@nestjs-query/core": ["core/src"],
            "@nestjs-query/query-graphql": ["query-graphql/src"],
            "@nestjs-query/query-typeorm": ["query-typeorm/src"],
            "@nestjs-query/core/*": ["core/src/*"],
            "@nestjs-query/query-graphql/*": ["query-graphql/src/*"],
            "@nestjs-query/query-typeorm/*": ["query-typeorm/src/*"]
        }
    },
    "references": [
        {"path": "./packages/core"},
        {"path": "./packages/query-graphql"},
        {"path": "./packages/query-typeorm"}
    ]
}
