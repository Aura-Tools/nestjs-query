{
  "extends": [
    "@commitlint/config-angular"
  ],
  "rules": {
    "subject-case": [
      2,
      "always",
      "sentence-case"
    ],
    "type-enum": [
      2,
      "always",
      [
        "build",
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "lint",
        "test",
        "example"
      ]
    ]
  }
}
